generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        Int          @id @default(autoincrement())
  image     String?
  email     String        @unique()
  nickname  String
  chatMembers Chatmember[]
  chatMessages ChatMessage[]
}

model Chat {
  id            Int           @id @default(autoincrement())
  name          String
  image         String?
  chatType      ChatType
  chatMessages  ChatMessage[]
  chatMembers   Chatmember[]
}

model Chatmember {
  clientId    Int
  client      Client    @relation(fields: [clientId], references: [id])
  chatId      Int
  chat        Chat @relation(fields: [chatId], references: [id])
  status      ClientStatus
  lastread    DateTime @default(now())
  @@id([clientId, chatId])
}

model ChatMessage {
  id          Int       @id @default(autoincrement())
  chatId      Int
  chat        Chat @relation(fields: [chatId], references: [id])
  content     String
  clientId     Int
  client      Client @relation(fields: [clientId],references: [id])
  createdAt   DateTime  @default(now())
}

enum ChatType {
  DIRECT
  GROUP
}
enum ClientStatus {
  INCHATGROUP
  OFFLINE
}
